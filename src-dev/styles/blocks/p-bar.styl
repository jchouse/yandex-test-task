.p-bar
  width: 100%
  height: 22px
  display: flex
  align-items: center
  justify-content: center
  overflow: hidden
  text-align: center
  position: relative
  border-radius: 20px
  font-size: 12px
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.3) inset

  &--big
    height: 36px
    font-size: 14px

  &--blue
    .p-bar__fill
      background: $cBlue

  &--yellow
    .p-bar__fill
      background: #ffe045

  &__val
    position: relative

  &__fill
    position: absolute
    background: linear-gradient(to bottom, rgba(180,227,145,1) 0%,rgba(97,196,25,1) 50%,rgba(180,227,145,1) 100%)
    height: 100%
    left: 0
    bottom: 0

