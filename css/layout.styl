@font-face {
  font-family: 'PTSans';
  src: url('pt_sans-webfont.eot');
  src: url('pt_sans-webfont.eot?#iefix') format('embedded-opentype'),
          url('pt_sans-webfont.woff') format('woff'),
          url('pt_sans-webfont.ttf') format('truetype'),
          url('pt_sans-webfont.svg#PTSansRegular') format('svg');
  font-weight: normal;
  font-style: normal;
}

section
  padding: 30px

.button
  color #000
  font-size 11px
  text-shadow 0 1px 0 rgba(255, 255, 255, .75)
  border-radius 6px
  background-clip padding-box
  background linear-gradient(to top, #e1e1e1 0%, #e1e1e1 30%, #f1f1f1 70.09%, #f1f1f1 100%)
  height: 20px
  line-height 20px
  padding: 0 20px
  font-family: Verdana, sans-serif
  display: inline-block
  white-space: nowrap
  text-decoration: none
  cursor: pointer
  border: 0
  margin: 0
  user-select: none
  position: relative
  &:before
    width: calc(100% + 2px)
    height: 22px
    top: -1px
    left: -1px
    z-index -1
    position: absolute
    background linear-gradient(to top, #e5e5e5 0%, #a8a8a8 100%)
    display: block
    content: ''
    border-radius 7px
  &:hover
    background linear-gradient(to top, #fdffcc 0%, #fdffcc 30%, #fdffeb 70.09%, #fdffeb 100%)
  &:focus
    &:before
      box-shadow 0 0 4px rgba(0, 35, 214, .94)
  &:active
    box-shadow inset 0 2px 3px rgba(0, 0, 0, .26)
    padding-top: 1px
    &:before
      box-shadow none

.review__wrap
  max-width: 85px
  border: none
  padding: 0

  &:not(:checked)
    & > input
      position: absolute
      top: -9999px

    & > label
      .star_review:before
        width: 17px
        height: 15px
        display: block
        content: ''
        background-image url("../images/stars.png")
        background-size 100% auto
        background-position bottom center

      &:hover .star_review:before,
      &:hover ~ label .star_review:before
        background-position top center
        cursor: pointer

  & > input:checked ~ label .star_review:before
    background-position top center

.star_review
  width: 15px
  height: 17px
  padding: 0 1px
  display: block
  content: ''
  float: right

.progress
  border-radius 6px
  background-color #a4ddff
  background linear-gradient(to top, #28bf14 0%, #8ada19 14.45%, #28bf14 49.02%, #aaff58 100%)
  display: block
  content: ''
  height: 13px
  z-index 1
  position: absolute
  top: 0

  &__wrap
    width: 210px
    height: 13px
    text-align center
    position: relative
    border-radius 6px
    background-clip padding-box
    background-color #fff
    box-shadow inset 0 1px 3px rgba(0, 0, 0, .29)
  &__count
    position: relative
    z-index: 2
    color #000
    font-family "Verdana"
    font-size 9px
    text-shadow 0 1px 0 rgba(255, 255, 255, .42)
    top: -4px

.browser
  &__list
    list-style-type none
    position: relative
    width: 1000px
  &__item
    list-style-type none
    height: 126px
    width: 126px
    vertical-align: middle
    text-align: center
    position: relative
    float: left
    display: flex
    align-items center
    background-image url("../images/1.gif")
    &:last-child
      float: right

.icon-browser
  background-image: url(../images/sprite.png)
  background-repeat: no-repeat
  height: 126px
  width: 126px
  display: inline-block
  position: absolute
  top: 0
  left: 0
  z-index: 15
  vertical-align: middle

  &-chrome
    background-position: 0 0

  &-firefox
    background-position: -127px 0

  &-opera
    background-position: -256px 0

  &-safari
    background-position: -381px 0

  &-ie
    background-position: -508px 0

.browser-alt
  z-index -1
  position: relative

  &_chrome
    color: #f9d411

  &_chrome_green
    color: #22a12a

  &_chrome_red
    color: #c90000

  &_firefox
    color: #f2a414

  &_opera
    color: #c10e0e

  &_safari
    color: #646464

.browser-alt_ie {
  color: #036da3;
  text-align: left;
  padding-right: 20px;
  max-width: 70px;
  display: block;
}

